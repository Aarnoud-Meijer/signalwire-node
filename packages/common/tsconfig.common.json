{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "../../dist/esm",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "scripthost"
    ],
    "removeComments": true
  }
}
