{
  "name": "signalwire-client-js",
  "version": "0.0.1",
  "description": "Client library for connecting to the SignalWire system",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Edoardo Gallo <egallo@signalwire.com>",
  "main": "dist/node/node-entry.js",
  "module": "dist/es6/browser-entry.js",
  "license": "ISC",
  "scripts": {
    "clean-build": "rm -rf dist/* && npm run build",
    "build": "npm run build-es5 && npm run build-es6 && npm run build-node",
    "build-es5": "webpack -p",
    "start:dev": "webpack-dev-server --host 0.0.0.0 --mode development",
    "build-es6": "tsc -p tsconfig.es6.json",
    "watch-es6": "tsc -p tsconfig.es6.json -w",
    "build-node": "rm -rf dist/node/ && tsc -p tsconfig.node.json",
    "watch-node": "tsc -p tsconfig.node.json -w",
    "tslint": "npm run tslint-es5 && npm run tslint-es6",
    "tslint-es5": "tslint -c tslint.json -p tsconfig.es5.json",
    "tslint-es6": "tslint -c tslint.json -p tsconfig.es6.json",
    "test": "jest --forceExit --coverage --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "debug": "npm run build && npm run watch-debug"
  },
  "dependencies": {
    "faye-websocket": "^0.11.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/uuid": "^3.4.4",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
