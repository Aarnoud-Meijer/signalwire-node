{
  "name": "signalwire",
  "version": "1.0.2",
  "description": "Client library for connecting to SignalWire.",
  "repository": {
    "type": "git",
    "url": "https://github.com/signalwire/signalwire-node"
  },
  "author": "SignalWire Team <open.source@signalwire.com>",
  "main": "dist/cjs/node/index.js",
  "module": "dist/esm/browser/index.js",
  "scripts": {
    "clean-build": "rm -rf dist/* && npm run build",
    "build": "npm run build-es5 && npm run build-es6 && npm run build-node",
    "build-es5": "webpack -p",
    "start:dev": "webpack-dev-server --host 0.0.0.0 --mode development",
    "build-es6": "tsc -p scripts/tsconfig.es6.json",
    "watch-es6": "tsc -p scripts/tsconfig.es6.json -w",
    "build-node": "rm -rf dist/cjs/ && tsc -p scripts/tsconfig.node.json",
    "watch-node": "tsc -p scripts/tsconfig.node.json -w",
    "tslint": "npm run tslint-es5 && npm run tslint-es6",
    "tslint-es5": "tslint -c tslint.json -p scripts/tsconfig.es5.json",
    "tslint-es6": "tslint -c tslint.json -p scripts/tsconfig.es6.json",
    "test:browser": "jest -c scripts/jest.jsdom.js --forceExit --coverage --detectOpenHandles",
    "test:node": "jest -c scripts/jest.node.js --forceExit --coverage --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "debug": "npm run build && npm run watch-debug"
  },
  "keywords": [
    "signalwire",
    "laml"
  ],
  "bugs": {
    "url": "https://github.com/signalwire/signalwire-node/issues"
  },
  "homepage": "https://github.com/signalwire/signalwire-node",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^4.0.0",
    "faye-websocket": "^0.11.1",
    "twilio": "^3.26.1",
    "uuid": "^3.3.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/jest": "^23.3.11",
    "@types/node": "^9.4.6",
    "@types/uuid": "^3.4.3",
    "typescript": "^3.2.4",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "mockttp": "^0.12.6",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0"
  }
}
