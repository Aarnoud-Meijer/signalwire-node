{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "dist/es6",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "dom",
      "scripthost"
    ],
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/interfaces",
    "src/node-entry.ts",
    "**/__mocks__/**/*"
  ]
}
